@model WebServerEmployee.Domain.Entity.Employee

@{
    ViewData["Title"] = "Введите ID сотрудника для удаления:";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="DeleteEmployee" asp-controller="Employee">
    <div>
        <div class="form-group">
            <input type="text" asp-for="EmployeeID" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <p>
        <a asp-controller="Employee" asp-action="GetAllEmployees"> Вывести список сотрудников </a>
    </p>
    <p> <a asp-controller="Home" asp-action="Index"> Перейти на главное меню </a> </p>
</div>

